@model tbluser.Models.UserViewModel
@{
    ViewData["Title"] = "Delete User";
    var errorMessage = TempData["errorMessage"]?.ToString();
}
<h3>@ViewData["Title"]</h3>
<hr />
@if (!string.IsNullOrWhiteSpace(@errorMessage))
{
    <div class="alert alert-danger">
        <strong>Error! </strong>@errorMessage
    </div>
    <button type="button" class="btn-close float-end" data-bs-dissmiss="alert" aria-label="close"></button>
}
<form action="Delete" method="post">

    <div class="mb-3">
        <label class="form-label">ID</label>
        <input type="text" class="form-control" asp-for="ID" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input type="text" class="form-control" asp-for="FirstName" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input type="text" class="form-control" asp-for="LastName" readonly/>
    </div>
    <div class="mb-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address" readonly/>
    </div>
    <div class="mb-3">
        <label class="form-label">Phone Number</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" readonly/>
    </div>
    <div class="mb-3">
        <label class="form-label">E-Mail</label>
        <input type="text" class="form-control" asp-for="EMail" readonly/>
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="text" class="form-control" asp-for="Password" readonly/>
    </div>
    <div class="d-grid">
        <button type="Submit" class="btn btn-danger">Delete</button>
    </div>
</form>
